<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <title>{% block title %}Sistema Web Para Reservaciones En Linea Casa Mu√±oz{% endblock %}</title>
        {% form_theme form 'casamunozempresaBundle:Form:fields.html.twig' %}
        {% block stylesheets %}
        <link href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet"/>     
        <link href="{{ asset('bundles/casamunozempresa/css/sigav.css') }}" type="text/css" rel="stylesheet" />
        <!-- <link href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet"/> -->
        <link href="{{ asset('bundles/casamunozempresa/imagenes/dtic-icono.png') }}" type="image/png" rel="Shortcut Icon" />
        {% endblock %}
    </head> 
   
    <body class="body-login">
        {% block body %} 
            <div class="centerDiv">
                <div class="container">    
                    <div class="panel panel-fondo">
                      <div class="panel-body">     
                        {{ form_start(form, {'attr': {'class': 'form-login'}}) }}
                        {{ form_errors(form) }}
                        <div class="centerDiv">
                                <img src="{{asset('images/contact.png')}}">
                                <h2 class="form-login-heading text-center"><Strong>Bienvenido</Strong></h2>
                        </div>                                        
                     <p>{{ form_widget(form.username) }}</p>
                        {{ form_widget(form.password) }}
			</br>

                        {{ form_widget(form.ingresar) }}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}

                     </div>
                    </div> 
                </div>                
            </div>           
        {% endblock %}
        {% block javascripts %}
            <script language="JavaScript" src ="{{asset('bootstrap/js/bootstrap.js')}}"> </script> 
            <script language="JavaScript" src ="{{asset('bundles/casamunozempresa/js/jquery-2.1.0.min.js')}}"> </script>
            <script language="JavaScript" src ="{{asset('bundles/casamunozempresa/js/password_checker.js')}}"> </script>
        {% endblock %}
    </body>
</html>